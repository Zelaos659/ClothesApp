                <SolidColorBrush Color="#B6B6B6" Opacity="0"/>
            </Button.Background>

            <!-- Сделать через вектор, и через код менять это состояние -->

            <Rectangle Fill="#000000"
                       Width="10"
                       Height="10"/>

