        <Button Width="50"
                Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,0,4,0"
                Style="{StaticResource ToolBtn}"
                Click="CloseWindow">

            <Button.Background>
                <SolidColorBrush Color="#FB3535" Opacity="0"/>
